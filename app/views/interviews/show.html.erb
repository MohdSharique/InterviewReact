<p id="notice"><%= notice %></p>

<h1>Interviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start Time</th>
      <th>End Time </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @interview.title %></td>
        <td><%= @interview.start_time %></td>
        <td><%= @interview.end_time %></td>
      </tr>
  </tbody>
</table>

<h1>Participants</h1>
<table>
  <thead>
    <tr>
      <th> Email </th>
      <th> Role </th>
    </tr>
  </thead>

  <tbody>
    <% @interview.participants.each do |participant| %>
      <tr>
        <td><%= participant.email %></td>
        <td><%= participant.role %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1> Add participants </h1>
<%= form_with(model: @participant, local: true) do |form| %>
    <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>
    <div class="field">
        <%= form.label :role %>
        <%= form.text_field :role %>
    </div>
    <%= form.hidden_field :interview_id, value: @interview.id %>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>

<br>

<%= link_to 'All Interviews', interviews_path %>